<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#0F62FE"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/new_push_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="17.5dp"
        android:adjustViewBounds="true"
        android:background="@drawable/tasks"
        />

    <TextView
        android:id="@+id/new_push_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:layout_marginEnd="7dp"
        android:fontFamily="sans-serif-light"
        android:text="ДОСТУПНО"
        android:layout_toLeftOf="@+id/new_push_body"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/new_push_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:text="7 ЗАДАНИЙ"
        android:textColor="@color/white" />

</RelativeLayout>